	public ResultSet getResult(String sql)
	{
		ResultSet result = null;
		try (Statement statement=connection.createStatement()) {
			result = statement.executeQuery(sql);
		}
		catch (SQLException ex)  {
			ex.printStackTrace();
		}
		return result;
	}
